#include <stdio.h>

float somador (float a, float b, float c){
  float total;
  total = a + b + c;
  return(total);
}

int main (void){
  float total, a, b, c;
  printf("Digite três números para somar: \n");
  scanf("%f %f %f", &a, &b, &c);
  total = somador (a, b, c);
  printf("%f\n", total);
  return 0;
}
